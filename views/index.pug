extends layout

block content
  h1 ベースフード管理システム（仮）
  form(action="/add-products", method="get") 
    button(type="submit") 取得
    p ※「取得」は月に一度、商品が届きたときに押して下さい。
  div#container
  p#process
  ul 
    if (products)
      each product in products 
        li #{product.name}: 残り#{product.stock}
  p#result
  form(action="/products/add" method="POST")
    input(type="text" name="input")#input
    button(type="submit") 追加
  script(src="javascripts/barcode.js")